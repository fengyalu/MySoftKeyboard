<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFFFF"
    android:layout_height="match_parent">
    <View
        android:id="@+id/top_side_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E8EEF3"/>
    <LinearLayout
        android:id="@+id/ll_number_edit"
        android:layout_below="@id/top_side_line"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#E8EEF3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:text=""
            android:textColor="#000000"
            android:textSize="26sp"
            android:gravity="center"
            android:background="#FFFFFFFF" />

        <TextView
            android:id="@+id/number_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#FFFFFFFF"
            android:text=""
            android:textColor="#000000"
            android:textSize="26sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/number_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#FFFFFFFF"
            android:text=""
            android:textColor="#000000"
            android:textSize="26sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/number_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#FFFFFFFF"
            android:text=""
            android:textColor="#000000"
            android:textSize="26sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/number_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#FFFFFFFF"
            android:text=""
            android:textColor="#000000"
            android:textSize="26sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/number_six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#FFFFFFFF"
            android:text=""
            android:textColor="#000000"
            android:textSize="26sp"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_below="@id/ll_number_edit"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E8EEF3"/>
</RelativeLayout>